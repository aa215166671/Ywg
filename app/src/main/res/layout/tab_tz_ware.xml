<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp">

        <RelativeLayout
            android:id="@+id/rl_touxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageButton
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="@drawable/touxiang" />

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_centerInParent="true"
                android:textColor="#00000000"/>

        </RelativeLayout>

        <TextView
            android:layout_toRightOf="@id/rl_touxiang"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:text="@string/app_name"/>

        <ImageButton
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/guanbi" />

    </RelativeLayout>

    <TextView
        android:id="@+id/warename"
        android:layout_below="@id/rl_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"
        android:text="古娜拉黑暗之神-呼呼拉呼-黑魔变身"
        android:textSize="20sp"/>

    <RelativeLayout
        android:id="@+id/neirongtupian"
        android:layout_width="wrap_content"
        android:layout_height="170sp"
        android:layout_below="@+id/warename"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/a00" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_tiezigongneng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/neirongtupian"
        android:background="#CCFF"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/zan"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/zan" />

        <TextView
            android:id="@+id/zanshuzi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="100" />

        <ImageButton
            android:id="@+id/buzan"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/fanzan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:layout_weight="1"
            android:text="100" />

        <ImageButton
            android:id="@+id/imgbtn_pinglun"
            android:onClick="imgbtn_pinglun"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/pinglun" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:layout_weight="1"
            android:text="100" />

        <ImageButton
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/zhuanfa" />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="10sp"
        android:layout_below="@+id/ll_tiezigongneng"
        android:layout_width="match_parent"
        android:layout_height="5sp"
        android:background="#CCCCCC"></RelativeLayout>

</RelativeLayout>