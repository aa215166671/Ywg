<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beijing">

    <ImageView
        android:id="@+id/fanhui_qs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:layout_marginLeft="10sp"
        android:src="@drawable/fanhui"/>


    <ImageView
        android:id="@+id/img_dingwei"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginTop="40sp"
        android:src="@drawable/dingwei"
        android:layout_centerHorizontal="true"/>

    <Spinner
        android:id="@+id/spinner_xiala"
        android:layout_below="@id/img_dingwei"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">
    </Spinner>
    <RelativeLayout
        android:id="@+id/ll_shoujihaoma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_xiala"
        android:layout_marginTop="200sp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/img_shouji"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/shouji"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/edit_shoujihaoma"
            android:layout_width="230sp"
            android:layout_height="45sp"
            android:gravity="center"
            android:background="@drawable/btn_shape"
            android:singleLine="true"
            android:inputType="text"
            android:hint="账号"
            android:digits="@string/rule_username"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_yanzhengma"
        android:layout_below="@id/ll_shoujihaoma"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/img_mima"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/anquan"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/edit_mima"
            android:layout_width="230sp"
            android:layout_height="45sp"
            android:gravity="center"
            android:background="@drawable/btn_shape"
            android:singleLine="true"
            android:hint="密码"
            android:inputType="textPassword"
            android:digits="@string/rule_password"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_xieyi"
        android:layout_below="@id/ll_yanzhengma"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/dl_gou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同意协议"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《探点校园安全条款》"
            android:textColor="#0000FF"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_shoujidenglu"
        android:layout_below="@id/ll_xieyi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5sp"
        android:background="@drawable/btn_shape"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:text="登录"/>

    <TextView
        android:layout_above="@+id/tv_mingzi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-----------------V1.0-----------------"
        android:textColor="#FFFFFF"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_mingzi"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BY探点校园"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>