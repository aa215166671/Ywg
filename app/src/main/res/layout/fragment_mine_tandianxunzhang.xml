<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffff">

        <ImageView
            android:id="@+id/fanhui_tandianxunzhang"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="10sp"
            android:src="@drawable/fanhui" />

        <TextView
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="探点勋章"
            android:textSize="18sp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/beijingse1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#cccc">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120sp"
                    android:background="#84B1ED"/>

                <LinearLayout
                    android:layout_width="320sp"
                    android:layout_height="100sp"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/yuanjiao"
                    android:layout_marginTop="40sp">

                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:src="@drawable/logo"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20sp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="你就是个猪"
                            android:textSize="18sp"
                            android:textColor="#000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已解锁0种身份"
                            android:textSize="12sp"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="320sp"
                    android:layout_height="150sp"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="180sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="社团达人"
                        android:textSize="18sp"
                        android:layout_marginLeft="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学校社团的优质管理员"
                        android:textSize="12sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="10sp"/>

                    <LinearLayout
                        android:layout_width="320sp"
                        android:layout_height="85sp"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10sp">

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginRight="20sp"
                            android:orientation="horizontal"
                            android:background="@drawable/yuanjiao"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="50sp"
                                android:layout_height="50sp"
                                android:src="@drawable/logo" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="15sp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="达人认证"
                                    android:textSize="12sp"
                                    android:layout_gravity="center"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:background="@drawable/yuanjiao"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="50sp"
                                android:layout_height="50sp"
                                android:src="@drawable/logo" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="15sp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="优质社团"
                                    android:textSize="12sp"
                                    android:layout_gravity="center"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/xiaoyuanxiaoguanjia_tandianxunzhang"
                    android:layout_width="320sp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="340sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="校园小管家"
                        android:textSize="18sp"
                        android:layout_marginLeft="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="探探校园氛围的守护神"
                        android:textSize="12sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="10sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="85sp"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10sp">

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginRight="20sp"
                            android:orientation="horizontal"
                            android:background="@drawable/yuanjiao"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="50sp"
                                android:layout_height="50sp"
                                android:src="@drawable/logo" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="15sp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="探探贡献者"
                                    android:textSize="12sp"
                                    android:layout_gravity="center"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:background="@drawable/yuanjiao"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="50sp"
                                android:layout_height="50sp"
                                android:src="@drawable/logo" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="15sp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="探探护卫队"
                                    android:textSize="12sp"
                                    android:layout_gravity="center"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="320sp"
                        android:layout_height="85sp"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10sp">

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginRight="20sp"
                            android:orientation="horizontal"
                            android:background="@drawable/yuanjiao"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="50sp"
                                android:layout_height="50sp"
                                android:src="@drawable/logo" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="15sp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="探探小侦探"
                                    android:textSize="12sp"
                                    android:layout_gravity="center"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:background="@drawable/yuanjiao"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="50sp"
                                android:layout_height="50sp"
                                android:src="@drawable/logo" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="15sp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="探探老司机"
                                    android:textSize="12sp"
                                    android:layout_gravity="center"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/beijingse2"
                    android:layout_below="@+id/xiaoyuanxiaoguanjia_tandianxunzhang"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:background="#cccc"></RelativeLayout>

            </RelativeLayout>

        </FrameLayout>

    </ScrollView>

</LinearLayout>