<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl_zhongbu_wode"
                            android:layout_width="match_parent"
                            android:layout_height="300sp"
                            android:background="@drawable/xingkong">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="32sp">

                                <ImageView
                                    android:id="@+id/fanhui_shiguangzhou"
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:background="@drawable/fanhui"
                                    android:layout_marginLeft="10sp"
                                    android:layout_centerVertical="true"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="时光轴"
                                    android:textSize="18sp"
                                    android:textColor="#FFFF"
                                    android:layout_centerInParent="true"/>

                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/touxiang_shiguangzhou"
                                android:layout_width="60sp"
                                android:layout_height="60sp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20sp"
                                android:background="@drawable/touxiang"/>

                            <TextView
                                android:id="@+id/yonghuming_shiguangzhou"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/touxiang_shiguangzhou"
                                android:layout_marginTop="10sp"
                                android:layout_marginLeft="20sp"
                                android:text="@string/app_name"
                                android:textSize="16sp"
                                android:textColor="#FFFF"/>



                            <LinearLayout
                                android:id="@+id/gerenshuxing_wode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="15sp"
                                android:paddingBottom="10sp">

                                <TextView
                                    android:layout_alignParentBottom="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="18sp"
                                    android:textColor="#FFFF"/>

                                <TextView
                                    android:layout_alignParentBottom="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="天"
                                    android:textSize="10sp"
                                    android:textColor="#FFFF"
                                    android:layout_marginLeft="5sp"/>

                                <TextView
                                    android:layout_alignParentBottom="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="18sp"
                                    android:textColor="#FFFF"
                                    android:layout_marginLeft="20sp"/>

                                <TextView
                                    android:layout_alignParentBottom="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="记录"
                                    android:textSize="10sp"
                                    android:textColor="#FFFF"
                                    android:layout_marginLeft="5sp"/>

                                <TextView
                                    android:layout_alignParentBottom="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="18sp"
                                    android:textColor="#FFFF"
                                    android:layout_marginLeft="20sp"/>

                                <TextView
                                    android:layout_alignParentBottom="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="访客"
                                    android:textSize="10sp"
                                    android:textColor="#FFFF"
                                    android:layout_marginLeft="5sp"/>

                            </LinearLayout>

                            <Button
                                android:id="@+id/fabu_shiguangzhou"
                                android:layout_width="50sp"
                                android:layout_height="30sp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="10sp"
                                android:layout_marginRight="20sp"
                                android:background="@drawable/yuanjiao_tuoyuan"
                                android:text="发布"
                                android:textColor="#FFFF"
                                android:textSize="15sp" />

                        </RelativeLayout>

                    </LinearLayout>

                    </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="450sp"
                    android:background="#f7f7f7" >

                    <RelativeLayout
                        android:id="@+id/date_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp" >

                        <TextView
                            android:id="@+id/time_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="2014年10月"
                            android:textColor="@android:color/black" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/top_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/date_layout"
                        android:background="@color/head_line_bg" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_below="@id/top_line" >

                        <View
                            android:id="@+id/group_tiao"
                            android:layout_width="1dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="55dp"
                            android:background="@color/time_line_bg" />

                        <ExpandableListView
                            android:id="@+id/expandlist"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:cacheColorHint="#00000000"
                            android:divider="@null" />
                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </FrameLayout>

    </ScrollView>

</LinearLayout>