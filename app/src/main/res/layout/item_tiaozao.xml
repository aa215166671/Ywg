<RelativeLayout
    android:id="@+id/tiaozao"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--发布图片-->
    <ImageView
        android:id="@+id/tz_img"
        android:padding="5dp"
        android:layout_width="75sp"
        android:layout_height="75dp"
        android:src="@drawable/gj"/>
    <LinearLayout
        android:layout_toRightOf="@id/tz_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <!--物品简介-->
        <TextView
            android:id="@+id/tz_neirong"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="毕业的小凳子"/>
        <!--几人查看过-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView
            android:id="@+id/tz_chakan_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30人"
            />
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看过"
            />
        </LinearLayout>
        <!--出售的类型-->
        <TextView
            android:id="@+id/tz_leixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物品"/>
        <!--红色框的文字-->
        <TextView
            android:id="@+id/tz_maimai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="售"
            android:textColor="#ff0000"
            />
    </LinearLayout>
    <!--出售价格-->
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp">
    <TextView
        android:id="@+id/tz_jiage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:text="￥5"/>
    </LinearLayout>
    <!--灰色间隙条-->
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/tz_img"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#000"
        android:alpha="0.1">
    </LinearLayout>
</RelativeLayout>