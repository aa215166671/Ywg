<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <!--导航条-->
                <LinearLayout
                    android:id="@+id/daohangtiao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:id="@+id/tupian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginLeft="30sp"
                        android:padding="5dp">
                        <ImageButton
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/jianzhizhinan"
                            android:background="#00000000"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="兼职指南"/>
                    </LinearLayout>
                    <LinearLayout
                        android:padding="5dp"
                        android:layout_marginLeft="60sp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <ImageButton
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/jianzhiku"
                            android:background="#00000000"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="兼职库"/>
                       </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginLeft="60sp"
                        android:padding="5dp">
                        <ImageButton
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/jianzhifenlei"
                            android:background="#00000000"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="兼职分类"/>
                    </LinearLayout>
                </LinearLayout>
                <!--灰色间隙条-->
                <LinearLayout
                    android:id="@+id/jianxi"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_below="@id/daohangtiao"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#000"
                    android:alpha="0.1">
                </LinearLayout>
                <!--岛外兼职-->
                <LinearLayout
                    android:id="@+id/daowaijianzhi"
                    android:layout_below="@id/jianxi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:textColor="#f000"
                        android:text="岛外兼职："/>
                    <Button
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="190dp"
                        android:background="#00000000"
                        android:textColor="#999999"
                        android:text=">"/>
                </LinearLayout>
                <!--灰色间隙条-->
                <LinearLayout
                    android:id="@+id/jianxi2"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_below="@id/daowaijianzhi"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#000"
                    android:alpha="0.1">
                </LinearLayout>
                <!--岛外兼职左右滑动-->
                <HorizontalScrollView

                    android:layout_below="@id/jianxi2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/horizontalScrollView"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">
                            <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                            android:id="@+id/daowai_tupian"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:src="@drawable/fachuandan"/>
                            <TextView
                            android:id="@+id/daowai_neirong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发传单"
                            android:textColor="#ff6600"/>
                            <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15/小时" />
                            <Button
                                android:layout_width="75dp"
                                android:layout_height="30dp"
                                android:text="详情"
                                android:background="#3399ff"/>
                    </LinearLayout>
                            <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                        <ImageView
                            android:id="@+id/daowai_tupian2"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:src="@drawable/qiantai">
                        </ImageView>
                        <TextView
                            android:id="@+id/daowai_neirong2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="酒店前台"
                            android:textColor="#ff6600"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15/小时" />
                            <Button
                                android:layout_width="75dp"
                                android:layout_height="30dp"
                                android:text="详情"
                                android:background="#3399ff"/>
                    </LinearLayout>
                            <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/daowai_tupian3"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:src="@drawable/fuwuyuan"/>
                            <TextView
                                android:id="@+id/daowai_neirong3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="服务员"
                                android:textColor="#ff6600"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15/小时"
                                />
                            <Button
                                android:layout_width="75dp"
                                android:layout_height="30dp"
                                android:text="详情"
                                android:background="#3399ff"/>
                        </LinearLayout>
                            <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/daowai_tupian4"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:src="@drawable/qunyan"/>
                            <TextView
                                android:id="@+id/daowai_neirong4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="群众演员"
                                android:textColor="#ff6600"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15/小时"
                                />
                            <Button
                                android:layout_width="75dp"
                                android:layout_height="30dp"
                                android:text="详情"
                                android:background="#3399ff"/>
                        </LinearLayout>
                        </LinearLayout>
                </HorizontalScrollView>

                <!--灰色间隙条-->
                <LinearLayout
                    android:id="@+id/jianxi3"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_below="@id/horizontalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#000"
                    android:alpha="0.1">
                </LinearLayout>
                <!--岛内兼职-->
                <LinearLayout
                    android:id="@+id/daoneijianzhi"
                    android:layout_below="@id/jianxi3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#f000"
                        android:layout_marginLeft="25dp"
                        android:text="岛内兼职："/>
                    <Button
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="190dp"
                        android:background="#00000000"
                        android:textColor="#999999"
                        android:text=">"/>
                </LinearLayout>
                <!--灰色间隙条-->
                <LinearLayout
                    android:id="@+id/jianxi4"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_below="@id/daoneijianzhi"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#000"
                    android:alpha="0.1">
                </LinearLayout>
                <!--岛兼职左右滑动-->
                <HorizontalScrollView
                    android:layout_below="@id/jianxi4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/horizontalScrollView2"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/daonei_tupian"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:src="@drawable/fachuandan">
                            </ImageView>
                            <TextView
                                android:id="@+id/daonei_neirong"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="发传单"
                                android:textColor="#ff6600"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15/小时"
                                />
                            <Button
                                android:layout_width="75dp"
                                android:layout_height="30dp"
                                android:text="详情"
                                android:textSize="15dp"
                                android:background="#3399ff"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/daonei_tupian2"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:src="@drawable/qiantai">
                            </ImageView>
                            <TextView
                                android:id="@+id/daonei_neirong2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="酒店前台"
                                android:textColor="#ff6600"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15/小时" />
                            <Button
                                android:layout_width="75dp"
                                android:layout_height="30dp"
                                android:text="详情"
                                android:background="#3399ff"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/daonei_tupian3"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:src="@drawable/fuwuyuan">
                            </ImageView>
                            <TextView
                                android:id="@+id/daonei_neirong3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="服务员"
                                android:textColor="#ff6600"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15/小时"
                                />
                            <Button
                                android:layout_width="75dp"
                                android:layout_height="30dp"
                                android:text="详情"
                                android:background="#3399ff"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/jdaowai_tupian4"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:src="@drawable/qunyan">
                            </ImageView>
                            <TextView
                                android:id="@+id/jdaowai_neirong4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="群众演员"
                                android:textColor="#ff6600"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15/小时"
                                />
                            <Button
                                android:layout_width="75dp"
                                android:layout_height="30dp"
                                android:text="详情"
                                android:background="#3399ff"/>
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</FrameLayout>
