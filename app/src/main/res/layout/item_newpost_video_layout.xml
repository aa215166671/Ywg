<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.kyun.android.baisibudejie.pro.newpost.view.views.CircleNetworkImageImage
                android:id="@+id/iv_header"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                circle:civ_border_width="1dp"
                circle:civ_border_color="@android:color/transparent"
                circle:civ_border_overlay="true"
                circle:civ_fill_color="@android:color/transparent"
                android:background="@mipmap/morentouxiang"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="@color/main_bottom_text_select"
                    android:text="热点追踪"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8dp"
                    android:textColor="@color/main_bottom_text_select"
                    android:text="05-26 11:48:58"
                    android:layout_marginTop="2dp"
                    android:alpha="0.5"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/main_bottom_text_select"
            android:text="付出不亚于任何人的努力"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"/>

        <ImageView
            android:id="@+id/iv_video"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/ic_launcher_round"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_like"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/zan"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/tv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="709"
                    android:layout_marginLeft="2dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_dislike"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_dislike"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/fanzan"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/tv_dislike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="709"
                    android:layout_marginLeft="2dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_comment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_comment"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/pinglun"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="709"
                    android:layout_marginLeft="2dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_forword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_forword"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/zhuanfa"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/tv_forword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="709"
                    android:layout_marginLeft="2dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#ccc"
        android:alpha="0.3"/>

</LinearLayout>