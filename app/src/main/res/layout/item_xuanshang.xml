<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:circle="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp">
        <!--头像-->

        <com.kyun.android.baisibudejie.pro.newpost.view.views.CircleNetworkImageImage
            android:id="@+id/touxiang_xuanshang"
            android:layout_width="40dp"
            android:layout_height="40dp"
            circle:civ_border_width="1dp"
            circle:civ_border_color="@android:color/transparent"
            circle:civ_border_overlay="true"
            circle:civ_fill_color="@android:color/transparent"
            android:background="@mipmap/morentouxiang"/>
        <!--头像右边的布局-->
        <LinearLayout
            android:layout_toRightOf="@id/touxiang_xuanshang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--名字及右边的【急】-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <!--名字及右边的【急】-->
                <TextView
                    android:id="@+id/name"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="多岁的"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#ff9933"
                    android:textSize="12dp"
                    android:text="急"
                    />
            </LinearLayout>
            <!--信誉值-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/xinyuzhi"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="信誉值："
                    android:layout_centerInParent="true"/>
                <TextView
                    android:id="@+id/xinyuzhi_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <!--发布内容-->
    <TextView
        android:id="@+id/neirong_xuanshang"
        android:layout_below="@id/rl_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:text="古娜拉黑暗之神-呼呼拉呼-黑魔变身"/>
    <!--发布图片-->
    <LinearLayout
        android:id="@+id/buji_tupian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/neirong_xuanshang"
        android:orientation="horizontal">
        <!--发布图片-->
        <ImageView
            android:id="@+id/neirongtupian"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="250sp"
            android:scaleType="fitXY"
            android:layout_marginLeft="10sp"
            android:background="@drawable/gj">
        </ImageView>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="250sp"
            android:scaleType="fitXY"
            android:layout_margin="3sp"
            >
        </ImageView>
    </LinearLayout>
    <!--转发，评论等功能条-->
    <RelativeLayout
        android:id="@+id/gongneng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buji_tupian"
        android:background="#CCFF"
        android:orientation="horizontal">

        <!--转发功能-->
        <ImageButton
            android:id="@+id/Bb_zhuanfa"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:background="#00000000"
            android:src="@drawable/zhuanfa"
            android:layout_marginLeft="20dp"/>

        <!--评论功能-->
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/Bb_zhuanfa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <ImageButton
            android:id="@+id/imgbtn_pinglun"
            android:onClick="imgbtn_pinglun"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/pinglun" />
        <!--评论数-->
        <TextView
            android:id="@+id/pinglun_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:text="100" />

        </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

        >
        <!--发布时间-->
        <TextView
            android:id="@+id/send_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019.7.28"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                />
        <!--结束时间-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019.8.1"
            />
        </LinearLayout>
    </RelativeLayout>
    <!--灰色间隙条-->
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/gongneng"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#000"
        android:alpha="0.1">
    </LinearLayout>

</RelativeLayout>