<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal"
            android:layout_marginTop="10sp">

            <com.kyun.android.baisibudejie.pro.newpost.view.views.CircleNetworkImageImage
                android:id="@+id/my_userurl"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginLeft="15sp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15sp">

                <TextView
                    android:id="@+id/my_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小猫"
                    android:textSize="15sp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/my_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刚刚"
                    android:textSize="12sp"
                    android:textColor="#cccc"
                    android:layout_marginTop="25sp"/>

                <LinearLayout
                    android:layout_width="80sp"
                    android:layout_height="30sp"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/zan_wodepinglun"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:src="@drawable/zan"
                        android:layout_marginRight="10sp"/>

                    <TextView
                        android:id="@+id/myzan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#0066ff"
                        android:text="0"
                        android:layout_marginRight="10sp"/>

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:src="@drawable/fanzan"
                        android:layout_marginRight="15sp"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/my_commenttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一个个都是人才,讲话又好听"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_marginLeft="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:padding="5sp"
            android:background="#CCCC">

            <ImageView
                android:id="@+id/post_texturl"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginRight="10sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/post_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重大发现"
                    android:textSize="11sp"
                    android:layout_marginTop="5sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="校园"
                    android:textSize="10sp"
                    android:layout_marginTop="20sp"
                    android:alpha="0.5"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5sp"
        android:background="#CCCC"
        android:layout_marginTop="15sp"></View>

</LinearLayout>