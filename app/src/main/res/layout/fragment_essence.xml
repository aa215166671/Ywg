<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:clickable="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.youth.banner.Banner
                    android:padding="5dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="150dp">
                </com.youth.banner.Banner>

                <LinearLayout
                    android:id="@+id/ll_zhuyaogongneng"
                    android:layout_below="@+id/ll_3Dhualan"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:orientation="horizontal"
                    android:layout_marginTop="5sp">

                    <TextView
                        android:id="@+id/tandian"
                        android:layout_width="40sp"
                        android:layout_height="match_parent"
                        android:drawableTop="@drawable/tandian"
                        android:gravity="center"
                        android:text="探点"
                        android:background="#00000000"
                        android:layout_weight="1"
                        android:layout_marginRight="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="5sp"/>

                    <TextView
                        android:id="@+id/shudong"
                        android:layout_width="40sp"
                        android:layout_height="match_parent"
                        android:drawableTop="@drawable/shudong"
                        android:gravity="center"
                        android:text="树洞"
                        android:background="#00000000"
                        android:layout_weight="1"
                        android:layout_marginRight="10sp"
                        android:layout_marginTop="5sp"/>

                    <TextView
                        android:id="@+id/yueba"
                        android:layout_width="40sp"
                        android:layout_height="match_parent"
                        android:drawableTop="@drawable/yueba"
                        android:gravity="center"
                        android:text="约吧"
                        android:background="#00000000"
                        android:layout_weight="1"
                        android:layout_marginRight="10sp"
                        android:layout_marginTop="5sp"/>

                    <TextView
                        android:id="@+id/jiehu"
                        android:layout_width="40sp"
                        android:layout_height="match_parent"
                        android:drawableTop="@drawable/jiehu"
                        android:gravity="center"
                        android:text="解乎"
                        android:background="#00000000"
                        android:layout_weight="1"
                        android:layout_marginRight="10sp"
                        android:layout_marginTop="5sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_zhuyaogongneng2"
                    android:layout_below="@+id/ll_3Dhualan"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5sp">

                    <TextView
                        android:id="@+id/bangbang"
                        android:layout_width="40sp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:drawableTop="@drawable/bangbang"
                        android:gravity="center"
                        android:text="帮帮" />

                    <TextView
                        android:id="@+id/xiaoyuanhuodong"
                        android:layout_width="40sp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5sp"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:drawableTop="@drawable/xiaoyuanhuodong"
                        android:gravity="center"
                        android:text="校园活动" />

                    <TextView
                        android:id="@+id/xiaoyuanxiaobao"
                        android:layout_width="40sp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5sp"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:drawableTop="@drawable/xiaoyuanxiaobao"
                        android:gravity="center"
                        android:text="校园小报" />

                    <TextView
                        android:id="@+id/shishizhengce"
                        android:layout_width="40sp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5sp"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:drawableTop="@drawable/shishizhengce"
                        android:gravity="center"
                        android:text="时事政策" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="#CCCC"
                    android:layout_margin="15sp"></RelativeLayout>

                <RelativeLayout
                    android:id="@+id/xinwenbobao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFF">

                    <LinearLayout
                        android:id="@+id/remen_our"
                        android:layout_width="match_parent"
                        android:layout_height="350sp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/remen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5sp"
                            android:layout_marginLeft="10sp"
                            android:text="校园小报"
                            android:textSize="20sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/tupian1"
                                android:layout_width="150sp"
                                android:layout_height="100sp"
                                android:background="@drawable/xinwen1"
                                android:layout_marginTop="10sp"
                                android:layout_marginLeft="20sp"/>

                            <TextView
                                android:layout_below="@+id/tupian1"
                                android:layout_width="150sp"
                                android:layout_height="wrap_content"
                                android:text="第一届校运动会火热召开"
                                android:textSize="12sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginLeft="20sp"
                                android:gravity="center"/>

                            <ImageView
                                android:id="@+id/tupian2"
                                android:layout_width="150sp"
                                android:layout_height="100sp"
                                android:background="@drawable/xinwen2"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="10sp"
                                android:layout_marginRight="20sp"/>

                            <TextView
                                android:layout_below="@+id/tupian2"
                                android:layout_width="150sp"
                                android:layout_height="wrap_content"
                                android:text="辅导员组织学生活动"
                                android:textSize="12sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginRight="20sp"
                                android:layout_alignParentRight="true"
                                android:gravity="center"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/tupian3"
                                android:layout_width="150sp"
                                android:layout_height="100sp"
                                android:background="@drawable/xinwen3"
                                android:layout_marginTop="20sp"
                                android:layout_marginLeft="20sp"/>

                            <TextView
                                android:layout_below="@+id/tupian3"
                                android:layout_width="150sp"
                                android:layout_height="wrap_content"
                                android:text="篮球赛表演"
                                android:textSize="12sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginLeft="20sp"
                                android:gravity="center"/>

                            <ImageView
                                android:id="@+id/tupian4"
                                android:layout_width="150sp"
                                android:layout_height="100sp"
                                android:background="@drawable/xinwen4"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="20sp"
                                android:layout_marginRight="20sp"/>

                            <TextView
                                android:layout_below="@+id/tupian4"
                                android:layout_width="150sp"
                                android:layout_height="wrap_content"
                                android:text="新开小店捧场啦"
                                android:textSize="12sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginRight="20sp"
                                android:layout_alignParentRight="true"
                                android:gravity="center"/>

                        </RelativeLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/meilixiaoyuan"
                        android:layout_below="@+id/remen_our"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/remen2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="美丽校园"
                            android:textSize="20sp"
                            android:layout_marginLeft="10sp" />

                        <RelativeLayout
                            android:id="@+id/fanpai"
                            android:layout_below="@+id/remen2"
                            android:layout_width="match_parent"
                            android:layout_height="200sp"
                            android:clipChildren="false">

                            <android.support.v4.view.ViewPager
                                android:id="@+id/viewpager"
                                android:layout_width="300sp"
                                android:layout_height="wrap_content"
                                android:clipChildren="false">
                            </android.support.v4.view.ViewPager>

                        </RelativeLayout>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/daodila"
                        android:layout_below="@+id/meilixiaoyuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="到底啦！！！"
                        android:layout_centerHorizontal="true"
                        android:textColor="#0066FF"/>

                    <View
                        android:layout_below="@+id/daodila"
                        android:layout_width="match_parent"
                        android:layout_height="70sp"></View>

                </RelativeLayout>

            </LinearLayout>

    </ScrollView>

</LinearLayout>
