                                android:layout_height="wrap_content"
                                android:text="1000"
                                android:textSize="12sp"
                                android:drawableLeft="@drawable/yanjing2"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="50sp"/>

